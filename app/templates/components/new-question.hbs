{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">First Name</label>
        {{input value=author id="author" class="form-control" required="required"}}
      </div>
      <div class="form-group">
        <label for="authorlast">Last Name</label>
        {{input value=authorlast id="authorlast" class="form-control" required="required"}}
      </div>
      <div class="form-group">
        <label for="query">Question</label>
        {{input value=query id="query" class="form-control" required="required"}}
      </div>  <div class="form-group">
          <label for="notes">Notes</label>
          {{input value=notes id="notes" class="form-control" required="required"}}
        </div>
        <button {{action 'saveQuestion1'}}>Save</button>
      </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
