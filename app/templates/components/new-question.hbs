{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="query">Question</label>
        {{input value=query id="query"}}
      </div>  <div class="form-group">
          <label for="notes">Notes</label>
          {{input value=notes id="notes"}}
        </div>
        <button {{action 'saveQuestion1'}}>Save</button>
      </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
